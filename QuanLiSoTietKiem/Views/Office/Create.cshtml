@model QuanLiSoTietKiem.Models.Office

@{
    ViewBag.Title = "Phân quyền";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">

    <div class="card-body">
        <div class="card-title">
            <h3 class="text-center title-2">Thêm chức vụ mới</h3>
        </div>
        <hr>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group has-success">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label mb-1" })

                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

            </div>
            <div>
                <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
                    Tạo
                </button>
            </div>
        }

        
    </div>
</div>

<div>
    @Html.ActionLink("Quay trở lại", "Index")
</div>
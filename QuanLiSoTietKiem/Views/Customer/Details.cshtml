@model QuanLiSoTietKiem.Models.Customer

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper">
    <div class="profile-card js-profile-card">
        <div class="profile-card__img">
            <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/331810/profile-sample4.jpg" alt="profile card">
        </div>

        <div class="profile-card__cnt js-profile-cnt">
            <div class="profile-card__name">@Html.DisplayFor(model => model.FullName)</div>
            <div class="profile-card__txt">@Html.DisplayNameFor(model => model.Phone): <strong>@Html.DisplayFor(model => model.Phone)</strong> </div>
            <div class="profile-card__txt">@Html.DisplayNameFor(model => model.Email): <strong>@Html.DisplayFor(model => model.Email)</strong> </div>
            <div class="profile-card__txt">@Html.DisplayNameFor(model => model.IdentityNumber): <strong>@Html.DisplayFor(model => model.IdentityNumber)</strong> </div>
           
            <div class="profile-card__txt">@Html.DisplayNameFor(model => model.Balance): <strong>@String.Format("{0:0,0}", Model.Balance)</strong> </div>
            <div class="profile-card__txt">@Html.DisplayNameFor(model => model.Sex): <strong>@Html.DisplayFor(model => model.Sex)</strong> </div>

            <div class="profile-card-loc">
                <span class="profile-card-loc__icon">
                    <svg class="icon"><use xlink:href="#icon-location"></use></svg>
                </span>

                <span class="profile-card-loc__txt">
                    @Html.DisplayFor(model => model.Address)
                </span>
            </div>

            

            <div class="profile-card-ctr">
                @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { @class = "profile-card__button button--orange" })
                @Html.ActionLink("Back to List", "Index", new { id = Model.ID }, new { @class = "profile-card__button button--blue" })
            </div>
        </div>

        <div class="profile-card-message js-message">
            <form class="profile-card-form">
                <div class="profile-card-form__container">
                    <textarea placeholder="Say something..."></textarea>
                </div>

                <div class="profile-card-form__bottom">
                    <button class="profile-card__button button--blue js-message-close">
                          
                    </button>

                    <button class="profile-card__button button--gray js-message-close">
                        Cancel
                    </button>
                </div>
            </form>

            <div class="profile-card__overlay js-message-close"></div>
        </div>

    </div>

</div>




<script>
  var messageBox = document.querySelector('.js-message');
  var btn = document.querySelector('.js-message-btn');
  var card = document.querySelector('.js-profile-card');
  var closeBtn = document.querySelectorAll('.js-message-close');

  btn.addEventListener('click',function (e) {
      e.preventDefault();
      card.classList.add('active');
  });

  closeBtn.forEach(function (element, index) {
     console.log(element);
      element.addEventListener('click',function (e) {
          e.preventDefault();
          card.classList.remove('active');
      });
  });
</script>
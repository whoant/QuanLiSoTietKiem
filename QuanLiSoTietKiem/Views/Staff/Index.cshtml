@model IEnumerable<QuanLiSoTietKiem.Models.Staff>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="">
    <div class="container-fluid">
        <div class="row justify-content-sm-between align-content-center">
            <div class="col-md-6 text-left mb-2">
                <h2 class="heading-section">Danh sách nhân viên</h2>
            </div>
            <div>
                <button class="btn btn-outline-secondary">@Html.ActionLink("Thêm nhân viên", "Create")</button>
            </div>
        </div>
        <div class="table">§§
            <div class="col-md-12">
                <table class="table table-striped">

                    <tr>

                        <th>
                            @Html.DisplayNameFor(model => model.UserName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Phone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Birthday)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Address)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Sex)
                        </th>

                        <th colspan="2">Chức năng</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Birthday)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Sex)
                            </td>

                            <td class="d-flex">
                                @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-success mr-1" })
                                @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-success mr-1" })
                              
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</section>